{
  "name": "Finding",
  "type": "finding",
  "description": "The finding object describes the results of detections or analytics.",
  "attributes": {
    "name": {
      "name": "Name",
      "description": "The name of detections or analytics that produced the finding.",
      "requirement": "required"
    },
    "uid": {
      "name": "UID",
      "description": "The unique identifier of the finding."
    },
    "type": {
      "description": "The type of the finding."
    },
    "attacks": {
      "description": "The array of attacks identified by the detections or analytics."
    },
    "cis20": {
      "requirement": "optional"
    },
    "confidence": {
      "requirement": "optional"
    },
    "confidence_id": {
      "requirement": "recommended"
    },
    "context": {
      "requirement": "optional"
    },
    "context_ids": {
      "requirement": "required"
    },
    "cve_uids": {
      "requirement": "optional"
    },
    "desc": {
      "description": "The description of of detections or analytics that produced the finding."
    },
    "impact": {
      "requirement": "optional"
    },
    "impact_id": {
      "requirement": "recommended"
    },
    "nist": {
      "requirement": "optional"
    },
    "observables": {
      "description": "The observables associated with the findings.",
      "requirement": "recommended"
    },
    "risk_score": {
      "requirement": "optional"
    },
    "risk_score_id": {
      "requirement": "recommended"
    },
    "type_id": {
      "description": "The type of the finding.",
      "requirement": "required",
      "enum": {
        "1": {
          "name": "Rule"
        },
        "2": {
          "name": "Behavior"
        },
        "3": {
          "name": "Information"
        }
      }
    }
  }
}
